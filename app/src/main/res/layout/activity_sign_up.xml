<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Sign_Up">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:backgroundTint="@color/white"
        tools:context=".activity.Login">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:textColor="@color/blue"
            android:layout_marginLeft="20dp"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign up your account"
            android:textSize="17dp"


            android:layout_marginLeft="20dp"></TextView>
        <ImageView
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:src="@drawable/signup"></ImageView>
        <EditText
            android:id="@+id/user_name_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:background="@drawable/custom_edit"
            android:paddingRight="20dp"
            android:hint="Your name"></EditText>
        <EditText
            android:id="@+id/email_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/mail"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_edit"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:hint="Email"></EditText>
        <EditText
            android:id="@+id/password_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/lock"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            android:drawablePadding="10dp"
            android:background="@drawable/custom_edit"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:hint="Password"></EditText>
        <EditText
            android:id="@+id/pasword_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/custom_edit"
            android:paddingLeft="20dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/lock"
            android:inputType="textPassword"
            android:paddingRight="20dp"
            android:layout_marginBottom="10dp"
            android:hint="Confirm Password"></EditText>
        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Sign Up"
            android:layout_marginBottom="10dp"
            app:backgroundTint="@null"
            android:background="@drawable/custom_button"
            android:layout_marginRight="20dp"></Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALready have a account?"
                android:textSize="15dp"
                ></TextView>
            <TextView
                android:id="@+id/txt_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in"
                android:textSize="15dp"
                android:textColor="@color/blue"
                ></TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>