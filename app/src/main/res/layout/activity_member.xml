<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MemberActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@drawable/custom_layout_member"
        android:layout_height="250dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:textColor="@color/white"

            android:text="Add new member"></TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/seach_member"
                android:background="@drawable/custom_edit_add_member"
                android:layout_width="match_parent"
                android:hint="Email..."
                android:textColor="@color/white"
                android:paddingLeft="25dp"
                android:textSize="15dp"
                android:textColorHint="@color/white"
                android:layout_height="wrap_content"></EditText>
            <Button
                android:id="@+id/btn_add_member"
                android:layout_width="100dp"

                android:background="@drawable/custom_button_add_member"
                app:backgroundTint="@null"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:drawableLeft="@drawable/ic_baseline_add_24"
                android:layout_alignParentRight="true"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:text="Add"></Button>
        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Member List"
        android:textColor="#535252"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"></TextView>
    <ListView
        android:id="@+id/list_member"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:dividerHeight="0dp"
        android:divider="@null"
        android:layout_height="match_parent"></ListView>
</LinearLayout>