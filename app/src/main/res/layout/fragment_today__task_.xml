<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEEEE"
    tools:context=".fragment.Today_Task_Fragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="22dp"
               android:layout_margin="20dp"
               android:textColor="@color/black"
               android:textStyle="bold"
               android:text="Today's task"></TextView>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="20dp"
               android:layout_margin="20dp"

               android:textColor="@color/black"
               android:textStyle="bold"
               android:text="Personal"></TextView>
               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/list_personal_today"
                   android:layout_width="match_parent"
                   android:dividerHeight="0dp"
                   android:divider="@null"
                   android:layout_height="220dp"
                   android:layout_margin="20dp"></androidx.recyclerview.widget.RecyclerView>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="20dp"
               android:layout_margin="20dp"

               android:textColor="@color/black"
               android:textStyle="bold"
               android:text="Group"></TextView>
           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/list_group_today"
               android:layout_width="match_parent"
               android:dividerHeight="0dp"
               android:divider="@null"
               android:layout_height="match_parent"
               android:layout_margin="20dp"></androidx.recyclerview.widget.RecyclerView>

       </LinearLayout>

        <ImageButton
            android:src="@drawable/ic_white_add_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_add_task"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="30dp"></ImageButton>
   </RelativeLayout>
</FrameLayout>